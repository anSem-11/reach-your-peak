.reach-your-peak-boxes {
  padding: 0;
  position: relative;
  min-height: 594px;
}

.boxes__container {
  padding: 0 20px;
}

.boxes__list {
  max-width: 1524px;
  width: 100%;
  position: relative;
  min-height: 594px;
  margin: 0 auto;
  list-style-type: none;
  display: flex;
}

.boxes__list::after {
  content: "";
  position: absolute;
  z-index: -5;
  top: 252px;
  right: 0;
  display: block;
  width: 100%;
  height: 759px;
  background: right top no-repeat url("https://direct-landings.azureedge.net/assets/img/pages/reach-your-peak/reach-your-peak-mountain.webp");
  transform: rotate(180deg);
}

.boxes__item {
  position: absolute;
  height: 460px;
  overflow: hidden;
  background: linear-gradient(46.23deg, #000000 50%, rgba(0, 0, 0, 0.8) 100%);
  font: 800 600px/498px Inter, sans-serif;
  text-align: left;
}

.boxes__item_text {
  position: absolute;
  bottom: -38px;
  left: -40px;
  font: 800 600px/498px Inter, sans-serif;
  letter-spacing: -0.025em;
  color: transparent;
}

.boxes__item:first-child {
  max-width: 570px;
  width: 100%;
  top: 40px;
  left: 0;
  z-index: 1;
}

.boxes__item:first-child .boxes__item_text {
  background: linear-gradient(180deg, rgba(0, 86, 255, 0.8) 0%, rgba(0, 86, 255, 0) 100%);
  background-clip: text;
  -webkit-background-clip: text;
}

.boxes__item:first-child .boxes__wrapper {
  top: 117px;
  left: 192px;
}

.boxes__item:nth-child(2) {
  max-width: 430px;
  width: 100%;
  top: 134px;
  left: 464px;
  z-index: 2;
}

.boxes__item:nth-child(2) .boxes__item_text {
  background: #0056FFCC;
  background-clip: text;
  -webkit-background-clip: text;
  left: -150px;
}

.boxes__item:nth-child(2) .boxes__wrapper {
  top: 122px;
  left: 35px;
}

.boxes__item:nth-child(3) {
  max-width: 400px;
  width: 100%;
  z-index: 3;
  top: 0;
  right: 384px;
}

.boxes__item:nth-child(3) .boxes__item_text {
  background: linear-gradient(180deg, rgba(0, 86, 255, 0.8) 0%, rgba(0, 86, 255, 0) 100%);
  background-clip: text;
  -webkit-background-clip: text;
  top: 0;
  left: -260px;
}

.boxes__item:nth-child(3) .boxes__wrapper {
  top: 142px;
  left: 32px;
}

.boxes__item:nth-child(4) {
  max-width: 484px;
  width: 100%;
  top: 71px;
  right: 0;
  z-index: 4;
}

.boxes__item:nth-child(4) .boxes__item_text {
  background: linear-gradient(180deg, rgba(0, 86, 255, 0.8) 0%, rgba(0, 86, 255, 0) 100%);
  background-clip: text;
  -webkit-background-clip: text;
  top: 0;
  left: -145px;
}

.boxes__item:nth-child(4) .boxes__wrapper {
  top: 125px;
  left: 30px;
}

.boxes__wrapper {
  max-width: 270px;
  color: #FFFFFF;
  position: absolute;
}

.boxes__wrapper_num {
  font: 400 22px/33px Inter, sans-serif;
  margin-bottom: 50px;
}

[lang=ar] .boxes__wrapper_num {
  margin-bottom: 20px;
}

.boxes__wrapper_num span {
  font: 700 40px/40px Inter, sans-serif;
}

.boxes__wrapper_text {
  font: 400 14px/21px Inter, sans-serif;
}

